<!-- Sign in form -->
<div class="container d-flex flex-wrap justify-content-center justify-content-center pt-5">
  <div class="w-100 align-self-end pt-1 pt-md-4 pb-4" style="max-width: 526px;">
    <h1 class="text-center text-xl-start">ログイン</h1>
    <%= form_with url: login_path, local: true do |f| %>
      <div class="position-relative mb-4">
        <div class="form-group">
          <%= f.label :user_name %>
          <%= f.text_field :user_name, class: 'form-control' %>
        </div>
      </div>
      <div class="mb-4">
        <div class="form-group">
          <%= f.label :password, User.human_attribute_name(:password)  %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit 'ログイン', class: 'btn btn-primary shadow-primary btn-lg w-100' %>
      </div>
    <% end %>
    <div class='text-center'>
      <%= link_to '登録ページへ', new_user_path %>
      <a href="#">パスワードをお忘れの方はこちら</a>
    </div>
  </div>
</div>